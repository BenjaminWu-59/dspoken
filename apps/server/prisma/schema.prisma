generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique
  hash String

  email  String? @unique
  phone  String?
  gender String?
  age    Int?
  avatar String?

  MemberVip MemberVip[]

  @@map("users")
}

model MemberVip {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  level    Int // 0 - 普通会员； 1 - vip会员； 2 - 终身会员 
  timeLeft DateTime?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("membervip")
}
